<actions>
	<!--Menu actions-->
	<action id="1" name="Throw" target="single" category="mecha" cost="0" class="offensive"
	        description="Throws a small object at the enemy" menuIcon="0">
		<warmup/>
		<activity>
			<face destination="source" direction="target"/>
			<anim destination="source" name="Cast1" cue="throw" block="true"/>
			<reset destination="source"/>
		</activity>
		<payload>
			<anim destination="targets" name="Recoil1"/>
			<audio cue="*ugh" destination="targets"/>
			<effect name="P_DustPuff" destination="targets" targetSocket="TargetSocket"/>
			<damages>
				<damage type="hitpoints" base="1" levelScale="3" min="0" max="50" destination="targets" class="physical"/>
			</damages>
		</payload>
	</action>
	<action id="2" name="Bombard" target="multiple" category="mecha" cost="0" class="offensive"
	        description="Throws a small object at all enemies" menuIcon="1">
		<warmup/>
		<activity>
			<anim destination="source" name="Cast1" cue="throw" block="true"/>
		</activity>
		<payload>
			<anim destination="targets" name="Recoil1" cue="*ugh"/>
			<effect name="P_DustPuff" targetSocket="TargetSocket" destination="targets"/>
			<damages>
				<damage type="hitpoints" base="1" levelScale="2" min="0" max="50" destination="targets" class="physical"/>
			</damages>
		</payload>
	</action>
	<action id="3" name="Heal" target="single" category="medica" cost="1" class="restorative"
            description="Recover some health" menuIcon="2">
			<warmup/>
			<activity>
				<effect name="P_magicCircle1" destination="source"/>
				<anim destination="source" name="Heal" cue="twinkle" block="true"/>
			</activity>
			<payload>
				<effect name="P_magicCircle1" destination="targets"/>
				<restore type="hitpoints" base="1" levelScale="2" min="1" max="100" destination="targets"/>
			</payload>				
	</action>
	<action id="4" name="Burn" target="single" category="therma" cost="3" class="offensive"
	        description="Damage an enemy with fire" menuIcon="3">
		<warmup/>
		<activity>
			<audio cue="twinkle" destination="source"/>
			<effect name="P_positiveCircle" destination="source"/>
			<anim destination="source" name="Cast2" cue="catapult" block="true"/>
		</activity>
		<payload>
			<audio cue="ugh" destination="targets"/>
			<anim destination="targets" name="Recoil1" cue="fireball"/>
			<effect name="P_fire" destination="targets" targetSocket="TargetSocket"/>
			<damages>
				<damage type="hitpoints" base="3" levelScale="3" min="1" max="100" destination="targets" class="fire"/>
			</damages>
		</payload>				
	</action>
	<action id="5" name="Punch" target="single" category="mecha" cost="1" class="offensive"
	        description="Hit an enemy with bare hands" menuIcon="4">
		<warmup/>
		<activity>
			<walk destination="source" to="target" proximity="150"/>
			<anim destination="source" name="Punch" cue="punch" block="true"/>
			<walk destination="source" to="home" proximity="1.0"/>
			<reset destination="source"/>
		</activity>
		<payload>
			<audio cue="ugh" destination="targets"/>
			<anim destination="targets" name="Recoil1" cue="fireball" block="false"/>
			<effect name="P_DustPuff" destination="targets" targetSocket="TargetSocket"/>
			<damages>
				<damage type="hitpoints" base="2" levelScale="2" min="1" max="50" destination="targets" class="physical"/>
			</damages>
		</payload>				
	</action>
	<action id="6" name="Deflect-4" category="defence" class="defensive" cost="2" target="single"
	        menuIcon="5" description="Reduce the power of physical attacks for 4 turns">
		<warmup/>
		<activity>
			<anim destination="source" name="Cast1" cue="shields" block="true"/>
		</activity>
		<payload>
			<shield destination="targets" type="physical" duration="4"/>				
		</payload>
	</action>
	<action id="7" name="Slow-4" target="single" cost="5" category="status" class="offensive"
	        menuIcon="0" description="Slow a player for 4 turns">
		<warmup/>
		<activity>
			<effect name="P_positiveCircle" destination="source"/>
			<anim destination="source" name="Cast1" cue="twinkle" block="true"/>
		</activity>
		<payload>
			<modifyStat destination="targets" stat="speed" delta="-5" duration="turns" turns="4" show="false"/>
			<modifyStat destination="targets" stat="evasion" delta="-5" duration="turns" turns="4" show="false"/>
			<indicator destination="targets" text="Slow" colour="1,1,1"/>
			<audio cue="slowdown" destination="targets"/>
		</payload>
	</action>
	
	<!--Item actions-->
	<action id="1000" name="Tonic" target="single" cost="0" class="restorative">
		<warmup/>
		<activity>
			<anim destination="source" name="Drink" cue="twinkle" block="true"/>				
		</activity>
		<payload>
			<restore type="hitpoints" fixed="true" base="50" destination="targets"/>
			<effect name="P_magicCircle1" destination="targets"/>
		</payload>
	</action>
	<action id="1001" name="ModifyStat" target="single" cost="0" class="neutral">
		<warmup/>
		<activity>
			<anim destination="source" name="Drink" cue="twinkle" block="true"/>				
		</activity>
		<payload>
			<modifyStat dynamic="true" destination="targets"/>
			<effect name="P_healGlow" destination="targets"/>			
		</payload>
	</action>	
</actions>